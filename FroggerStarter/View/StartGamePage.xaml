<Page
    x:Class="FroggerStarter.View.StartGamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sprites="using:FroggerStarter.View.Sprites"
    xmlns:viewModel="using:FroggerStarter.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="StartGameStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontFamily" Value ="Arial"/>
        </Style>

        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LawnGreen"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="FontFamily" Value ="Arial"/>
        </Style>

        <SolidColorBrush x:Key="DotColor" Color="Purple"/>
    </Page.Resources>

    <Page.DataContext>
        <viewModel:HighScoreBoardViewModel/>
    </Page.DataContext>

    <Canvas Width="{StaticResource AppWidth}" Height="{StaticResource AppHeight}" Background="Black">

        <sprites:FrogSprite Canvas.Left="300" Canvas.Top="77"/>
        <sprites:FrogHomeSprite/>
        <sprites:FrogHomeSprite Canvas.Left="600" Canvas.Top="360"/>
        <sprites:FrogHomeSprite Canvas.Top="360"/>
        <sprites:FrogHomeSprite Canvas.Left="600"/>

        <TextBlock Canvas.Left="233" Canvas.Top="139" Text="Big Ol' Frog" Style="{StaticResource TitleStyle}"/>
        <TextBlock Canvas.Left="194" Canvas.Top="241" Text="Press Enter to Start" Style="{StaticResource StartGameStyle}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="44" Canvas.Top="139" Fill="{StaticResource DotColor}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="139" Canvas.Top="62" Fill="{StaticResource DotColor}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="44" Canvas.Top="260" Fill="{StaticResource DotColor}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="497" Canvas.Top="62" Fill="{StaticResource DotColor}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="595" Canvas.Top="260" Fill="{StaticResource DotColor}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="497" Canvas.Top="190" Fill="{StaticResource DotColor}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="595" Canvas.Top="124" Fill="{StaticResource DotColor}"/>
        <Ellipse Height="30" Width="30" Canvas.Left="139" Canvas.Top="190" Fill="{StaticResource DotColor}"/>
        <Button Content="View ScoreBoard" Canvas.Left="120" Canvas.Top="340" Width="140" Height="45" Foreground="Purple" Background="ForestGreen" FontSize="16" Click="ViewScoreBoardBtn_Click" />
        <Button Content="Clear ScoreBoard" Canvas.Left="400" Canvas.Top="340" Width="140" Height="45" Foreground="Purple" Background="ForestGreen" FontSize="16" Command="{Binding ClearCommand}"/>
    </Canvas>
</Page>
