    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Please enter your name to record new score!"
    x:Name="dialog">

    <Grid>
        <Button Content="Submit" Margin="146,59,0,0" VerticalAlignment="Top" Width="116" Click="SubmitButton_Click"/>
        <TextBox Name="nameTextBox" HorizontalAlignment="Left" Margin="164,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBlock HorizontalAlignment="Left" Margin="100,6,0,0" Text="Name:" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="52" FontSize="18"/>
    </Grid>
</ContentDialog>
